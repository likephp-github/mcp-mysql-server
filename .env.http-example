# 資料庫配置 (必須)
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_username
DB_PASSWORD=your_password
DB_NAME=your_database
DB_SSL=false
DB_CONNECTION_LIMIT=10
DB_TIMEOUT=60000

# 伺服器網路配置 (HTTP 模式)
MCP_TRANSPORT_MODE=http              # stdio | http | both
MCP_SERVER_PORT=3000                 # HTTP 伺服器端口
MCP_SERVER_HOST=0.0.0.0             # 綁定的主機地址 (0.0.0.0 允許外部訪問)
MCP_ALLOWED_ORIGINS=*               # CORS 允許的來源 (* 或 comma-separated list)
MCP_ENABLE_CORS=true                # 是否啟用 CORS
MCP_API_KEY=                        # 可選的 API 密鑰 (留空表示不需要驗證)

# 多資料庫配置範例 (可選)
# DB_CONNECTIONS=main,secondary
# DB_MAIN_HOST=localhost
# DB_MAIN_PORT=3306
# DB_MAIN_USER=main_user
# DB_MAIN_PASSWORD=main_password
# DB_MAIN_NAME=main_database
# DB_MAIN_SSL=false
# DB_SECONDARY_HOST=remote.server.com
# DB_SECONDARY_PORT=3306
# DB_SECONDARY_USER=secondary_user
# DB_SECONDARY_PASSWORD=secondary_password
# DB_SECONDARY_NAME=secondary_database
# DB_SECONDARY_SSL=true
# DEFAULT_DB=main
