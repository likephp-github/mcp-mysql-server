{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch MCP MySQL Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/dist/index.js",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "preLaunchTask": "Build MCP Server",
            "stopOnEntry": false
        },
        {
            "name": "Debug MCP MySQL Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/index.ts",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "runtimeArgs": ["--loader", "tsx/esm"],
            "stopOnEntry": false
        }
    ]
}